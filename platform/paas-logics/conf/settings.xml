<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-lazy-init="true">

    <context:property-placeholder location="file:conf/settings.properties"/>

    <import resource="classpath:settings/common-bl-settings.xml"/>

    <bean id="businessLogics" class="paas.PaasBusinessLogics">
        <property name="overridingModulesList" value="${logics.overridingModulesList}"/>
    </bean>

    <bean id="remoteLogics" class="paas.PaasRemoteLogics">
        <property name="businessLogics" ref="businessLogics"/>
        <property name="logicsInstance" ref="logicsInstance"/>
        <property name="navigatorsManager" ref="navigatorsManager"/>
        <property name="restartManager" ref="restartManager"/>
        <property name="securityManager" ref="securityManager"/>
        <property name="dbManager" ref="dbManager"/>
    </bean>

    <!-- Other services -->
    <bean id="appManager" class="paas.manager.server.AppManager">
        <property name="logicsInstance" ref="logicsInstance"/>
        <property name="rmiManager" ref="rmiManager"/>
        <property name="businessLogics" ref="businessLogics"/>
        <property name="acceptPort" value="${paas.acceptPort}"/>
        <property name="registryPort" value="${rmi.registryPort}"/>
        <property name="dbServer" value="${db.server}"/>
        <property name="dbUser" value="${db.user}"/>
        <property name="dbPassword" value="${db.password}"/>
    </bean>

    <util:list id="instanceCustomObjects">
        <ref bean="appManager"/>
    </util:list>

    <util:list id="customLifecycleListeners">
        <ref bean="appManager"/>
    </util:list>
</beans>
