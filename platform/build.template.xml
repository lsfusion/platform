<?xml version="1.0"?>
<project name="LS Fusion Build Utils">
    <target name="recursiveCompile">
        <exec dir="${basedir}" executable="cmd" failonerror="true">
            <arg value="/c"/>
            <arg value="mvn"/>
            <!--<arg value="-X"/>-->
            <arg value="--also-make" />
            <arg value="--projects" />
            <arg value="by.luxsoft.platform:${artifactId}" />
            <arg value="compile" />
        </exec>
    </target>

    <target name="quickCompile">
        <exec dir="${basedir}/${artifactId}" executable="cmd" failonerror="true">
            <arg value="/c"/>
            <arg value="mvn"/>
            <arg value="compile" />
            <arg value="-Dquickbuild" />
        </exec>
    </target>

    <target name="recursiveCompileWithGwt">
        <exec dir="${basedir}" executable="cmd" failonerror="true">
            <arg value="/c"/>
            <arg value="mvn"/>
            <arg value="-DgwtCompile"/>
            <arg value="-Dnodesktop"/>
            <arg value="--also-make" />
            <arg value="--projects" />
            <arg value="by.luxsoft.platform:${artifactId}" />
            <arg value="compile" />
        </exec>
    </target>

${modulesTargets}
</project>