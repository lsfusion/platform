<?xml version='1.0' encoding='ISO-8859-1' ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="serverlog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/server.log"/>
            <param name="fileNamePattern" value="logs/server-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="104857600"/> <!-- 100MB -->
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="errorlog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/server-err.log"/>
            <param name="fileNamePattern" value="logs/server-err-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="10485760"/> <!-- 10MB -->
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="WARN"/>
        </filter>
    </appender>

    <appender name="sqllog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/sql.log"/>
            <param name="fileNamePattern" value="logs/sql-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="10485760"/> <!-- 10MB -->
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="remotelog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/server-remote.log"/>
            <param name="fileNamePattern" value="logs/server-remote-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="100485760"/>
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="maillog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/mail.log"/>
            <param name="fileNamePattern" value="logs/mail-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="100485760"/>
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="scriptlog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/script.log"/>
            <param name="fileNamePattern" value="logs/script-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="100485760"/>
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="hashlog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/hash.log"/>
            <param name="fileNamePattern" value="logs/hash-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="10485760"/>
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="importlog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/import.log"/>
            <param name="fileNamePattern" value="logs/import-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="10485760"/>
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="invocationlog" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="minIndex" value="1"/>
            <param name="maxIndex" value="12"/>
            <param name="activeFileName" value="logs/invocation.log"/>
            <param name="fileNamePattern" value="logs/invocation-%i.log.zip"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
            <param name="maxFileSize" value="10485760"/>
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %5p %t %c{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <category name="platform.server.logics">
        <priority value="INFO"/>
    </category>

    <category name="platform.server.logics.scripted.ScriptingLogicsModule" additivity="false">
        <priority value="INFO"/>
        <appender-ref ref="scriptlog"/>
    </category>

    <category name="platform.server.remote" additivity="false">
        <priority value="INFO"/>
        <appender-ref ref="remotelog"/>
    </category>

    <category name="platform.server.remote.RemoteExceptionsAspect" additivity="false">
        <priority value="ERROR"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="serverlog"/>
        <appender-ref ref="errorlog"/>
    </category>

    <category name="platform.server.mail" additivity="false">
        <priority value="INFO"/>
        <appender-ref ref="maillog"/>
    </category>

    <category name="platform.server.base" additivity="false">
        <priority value="INFO"/>
        <appender-ref ref="hashlog"/>
    </category>

    <category name="platform.server.data.SQLSession" additivity="false">
        <priority value="INFO"/>
        <appender-ref ref="sqllog"/>
        <appender-ref ref="serverlog"/>
    </category>

    <category name="platform.server.remote.PausableInvocation" additivity="false">
        <priority value="ALL"/>
        <appender-ref ref="invocationlog"/>
        <!--<appender-ref ref="stdout"/>-->
    </category>

    <category name="platform.server.data.SQLSessionLoggerAspect" additivity="false">
        <priority value="INFO"/>
        <appender-ref ref="sqllog"/>
        <appender-ref ref="serverlog"/>
    </category>

    <category name="paas.manager">
        <priority value="DEBUG"/>
    </category>

    <category name="SystemLogger" additivity="false">
        <priority value="ALL"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="serverlog"/>
    </category>

    <root>
        <priority value="ERROR"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="serverlog"/>
        <appender-ref ref="errorlog"/>
    </root>
</log4j:configuration>