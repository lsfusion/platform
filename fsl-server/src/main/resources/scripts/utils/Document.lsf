// Closed
closeDocuments = ACTION ABSTRACT LIST (DATE);

documentsClosedDate 'Дата закрытия документов' = DATA DATE();
 
dialogCloseDocumentsDate 'Закрыть документы'() = ACTION {
    IF documentsClosedDate() THEN
        FORM dialogDate OBJECTS d = documentsClosedDate() MODAL
    ELSE
        FORM dialogDate MODAL;
    IF formResult() == FormResult.ok THEN {
        documentsClosedDate() <- chosenDate('d');
        closeDocuments(chosenDate('d'));
        apply();
    }
}

EXTEND FORM options
    PROPERTIES documentsClosedDate(), dialogCloseDocumentsDate()
;

DESIGN options {
    commons {
        NEW documents {
            caption = 'Документы';
            MOVE PROPERTY(documentsClosedDate());
            MOVE PROPERTY(dialogCloseDocumentsDate());
        }
    }
}

META defineDocumentClosedConstraint(objectClass)
    CONSTRAINT CHANGED(date(objectClass d)) AND date(d) < documentsClosedDate()
        MESSAGE 'Запрещено создавать документы до даты закрытия';
END

META defineDocumentHeaderClosed (objectClass)
    isClosed 'Закрыт' = DATA BOOLEAN (objectClass);
    isOpened 'Не закрыт' (objectClass o) = o IS objectClass AND NOT isClosed(o) PERSISTENT;

    close 'Закрыть' (objectClass o) = ACTION NEWSESSION { isClosed(o) <- TRUE; apply(); } TOOLBAR CONFIRM;

    open 'Открыть' (objectClass o) = ACTION NEWSESSION { isClosed(o) <- NULL; apply(); } TOOLBAR CONFIRM;
    
    closeDocuments(DATE date) += ACTION isClosed(objectClass o) <- TRUE WHERE date(o) < date AND date IS DATE;
END

META defineDocumentAbstractHeaderClosed (objectClass)
    isClosed 'Закрыт' = ABSTRACT BOOLEAN(objectClass) PERSISTENT;
    isOpened 'Не закрыт' (objectClass o) = o IS objectClass AND NOT isClosed(o) PERSISTENT INDEXED;
    close 'Закрыть' (o) = ACTION ABSTRACT LIST (objectClass);
END

META defineDocumentInterfaceHeaderClosed (objectClass)
    @defineDocumentAbstractHeaderClosed(objectClass);
    @defineDocumentHeaderClosed(User##objectClass);
    isClosed(User##objectClass o) += isClosed(o);
    close(User##objectClass o) += ACTION isClosed(o) <- TRUE;
END

META defineDocumentDetailClosed (object, detailClass)
    isClosed 'Закрыт' (detailClass d) = isClosed(object(d));
    isOpened 'Не закрыт' (detailClass d) = isPosted(d) AND NOT isClosed(d);
END

META defineDocumentDetailClosed (object)
