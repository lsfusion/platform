<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>lsfusion.build</groupId>
        <artifactId>build</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../build/pom.xml</relativePath>
    </parent>

    <groupId>lsfusion.platform</groupId>
    <artifactId>platform</artifactId>
    <version>1.2.1</version>
    <packaging>pom</packaging>
    <name>lsFusion platform</name>

    <modules>
        <module>base</module>
        <module>logics</module>
        <module>api</module>
        <module>report-api</module>
        <module>desktop-client</module>
        <module>server</module>
        <module>serveragent</module>
        <module>web-api</module>
        <module>web-client</module>
        <module>sgwt-api</module>
    </modules>

    <scm>
        <developerConnection>scm:svn:svn://server/lsfusion/platform/tags/platform-1.2.1</developerConnection>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <releaseProfiles>sources</releaseProfiles>
                    <username>redmine</username>
                    <password>enimder</password>
                    <allowTimestampedSnapshots>true</allowTimestampedSnapshots>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
