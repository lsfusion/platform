<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>lsfusion.platform.build</groupId>
    <artifactId>base</artifactId>
    <packaging>pom</packaging>
    <version>5.2-SNAPSHOT</version>
    <name>Base</name>

    <properties>
        <!-- Repositories properties -->
        <lsfusion.releases.repo>https://repo.lsfusion.org/nexus/repository/releases</lsfusion.releases.repo>
        <lsfusion.public.repo>https://repo.lsfusion.org</lsfusion.public.repo>
        <lsfusion.snapshots.repo>https://repo.lsfusion.org/nexus/repository/snapshots</lsfusion.snapshots.repo>

        <!-- MAVEN PLUGIN VERSIONS -->
        <aspectj.version>1.9.2</aspectj.version>

        <!-- general properties -->
        <maven.test.skip>true</maven.test.skip>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- used by compiler -->
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>${maven.compiler.source}</maven.compiler.target>

        <!-- used by AspectJ-->
        <mojo.java.target>${maven.compiler.source}</mojo.java.target>
        <project.build.java.target>${maven.compiler.target}</project.build.java.target>

        <!-- assemble properties -->
        <assemble.finalName>base</assemble.finalName>
        <assemble.jar>${project.build.directory}/${assemble.finalName}.${project.packaging}</assemble.jar>
        <assemble.packed>${assemble.jar}.pack.gz</assemble.packed>

        <!-- DEPENDENCY VERSIONS -->
        <lsfusion.version>5.2-SNAPSHOT</lsfusion.version>

        <google.guava.version>19.0</google.guava.version>
        
        <!-- When upgrading this version, change the corresponding version number in the equ-clt module. -->
        <postgresql.version>42.2.8</postgresql.version>
    </properties>

    <repositories>
        <repository>
            <id>lsfusion</id>
            <name>lsFusion Public Repository</name>
            <url>${lsfusion.public.repo}</url>
            <snapshots>
                <updatePolicy>always</updatePolicy>
            </snapshots>
        </repository>
    </repositories>

    <!-- needed for resolving patched dependency in gwt-maven-plugin-->
    <pluginRepositories>
        <pluginRepository>
            <id>lsfusion</id>
            <name>lsFusion Public Repository</name>
            <url>${lsfusion.public.repo}</url>
        </pluginRepository>
    </pluginRepositories>

    <!-- deploy destinations -->
    <!-- actually it is needed only for platform-base module (and all its parents), but because we want to deploy everything with one command for top module (including base and logics), has to be here -->
    <distributionManagement>
        <repository>
            <id>lsfusion.releases</id>
            <url>${lsfusion.releases.repo}</url>
        </repository>
        <snapshotRepository>
            <id>lsfusion.snapshots</id>
            <url>${lsfusion.snapshots.repo}</url>
        </snapshotRepository>
    </distributionManagement>

    <!-- MAVEN PLUGIN VERSIONS -->
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>3.1.0</version>
                    <dependencies>
                        <dependency>
                            <groupId>de.matthiasmann</groupId>
                            <artifactId>p200ant</artifactId>
                            <version>1.0</version>
                        </dependency>
                        <!-- Fix of 'java.lang.UnsupportedOperationException: The Security Manager is deprecated
                        and will be removed in a future release' error when compiling on Java 18+.
                        Fails on execution of LSFLogicsParserPostProcess (server pom.xml)
                        The issue has been resolved in Ant 1.10.14
                        https://bz.apache.org/bugzilla/show_bug.cgi?id=65381
                        This dependency can be removed when new version on antrun plugin arrives 
                        as current latest version 3.1.0 uses Ant 1.10.12 -->
                        <dependency>
                            <groupId>org.apache.ant</groupId>
                            <artifactId>ant</artifactId>
                            <version>1.10.14</version>
                        </dependency>
                    </dependencies>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>3.4.0</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.6</version>
                    <configuration>
                        <encoding>UTF-8</encoding>
                        <nonFilteredFileExtensions>
                            <nonFilteredFileExtension>ttf</nonFilteredFileExtension>
                        </nonFilteredFileExtensions>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>3.0.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.4</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-shade-plugin</artifactId>
                    <version>3.2.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.8.0</version>
                    <!-- https://issues.apache.org/jira/browse/MCOMPILER-209 -->
                    <configuration>
                        <useIncrementalCompilation>false</useIncrementalCompilation>
                    </configuration>
                    <!--в новой версии plugina баг, ломающий инкрементную компиляцию... -->
                    <!--<version>3.1</version>-->
                </plugin>
                <plugin>
                    <groupId>com.nickwongdev</groupId>
                    <artifactId>aspectj-maven-plugin</artifactId>
                    <version>1.12.1</version>
                    <configuration>
                        <!--для вывода в консоль при дебаге-->
                        <!--<showWeaveInfo>true</showWeaveInfo>-->

                        <complianceLevel>${maven.compiler.source}</complianceLevel>
                        <source>${maven.compiler.source}</source>
                        <target>${maven.compiler.source}</target>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>compile</goal>
                            </goals>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>org.aspectj</groupId>
                            <artifactId>aspectjrt</artifactId>
                            <version>${aspectj.version}</version>
                        </dependency>
                        <dependency>
                            <groupId>org.aspectj</groupId>
                            <artifactId>aspectjtools</artifactId>
                            <version>${aspectj.version}</version>
                        </dependency>
                    </dependencies>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <version>1.8</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>2.8.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.10.3</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>versions-maven-plugin</artifactId>
                    <version>2.5</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <!-- DEPENDENCY VERSIONS -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${google.guava.version}</version>
            </dependency>
            <dependency>
                <groupId>org.postgresql</groupId>
                <artifactId>postgresql</artifactId>
                <version>${postgresql.version}</version>
            </dependency>

            <!-- Platform modules -->
            <dependency>
                <groupId>lsfusion.platform</groupId>
                <artifactId>logics</artifactId>
                <version>${lsfusion.version}</version>
            </dependency>
            <dependency>
                <groupId>lsfusion.platform</groupId>
                <artifactId>api</artifactId>
                <version>${lsfusion.version}</version>
            </dependency>
            <dependency>
                <groupId>lsfusion.platform</groupId>
                <artifactId>desktop-client</artifactId>
                <version>${lsfusion.version}</version>
            </dependency>
            <dependency>
                <groupId>lsfusion.platform</groupId>
                <artifactId>desktop-client</artifactId>
                <version>${lsfusion.version}</version>
                <classifier>assembly</classifier>
                <type>pack.gz</type>
            </dependency>
            <dependency>
                <groupId>lsfusion.platform</groupId>
                <artifactId>server</artifactId>
                <version>${lsfusion.version}</version>
            </dependency>
            <dependency>
                <groupId>lsfusion.platform</groupId>
                <artifactId>web-client</artifactId>
                <version>${lsfusion.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!--  in theory should be in logics/pom.xml, but maven release plugin will fail in that case (it can ignore ${lsfusion.version} in this file, but not in child's poms) -->
    <profiles>
        <profile>
            <id>noserver</id>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>lsfusion.platform</groupId>
                        <artifactId>api</artifactId>
                        <version>${lsfusion.version}</version>
                        <scope>provided</scope>
                    </dependency>
                    <dependency>
                        <groupId>lsfusion.platform</groupId>
                        <artifactId>server</artifactId>
                        <version>${lsfusion.version}</version>
                        <scope>provided</scope>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
    </profiles>
</project>