// Closed
closeDocuments  ABSTRACT LIST ( DATE);

documentsClosedDate '{document.closed.date}' = DATA DATE();
 
dialogCloseDocumentsDate '{document.close.documents.date}'()  { 
    DIALOG dialogDate OBJECTS d = documentsClosedDate() INPUT DO {
        documentsClosedDate() <- d;
        closeDocuments(d);
        apply();
    }
}

EXTEND FORM options
    PROPERTIES documentsClosedDate(), dialogCloseDocumentsDate()
;

DESIGN options {
    commons {
        NEW documents {
            caption = '{document.documents}';
            MOVE PROPERTY(documentsClosedDate());
            MOVE PROPERTY(dialogCloseDocumentsDate());
        }
    }
}

META defineDocumentClosedConstraint(objectClass)
    CONSTRAINT CHANGED(date(objectClass d)) AND date(d) < documentsClosedDate()
        MESSAGE '{documents.message.closed.constraint}';
END

META defineDocumentHeaderClosed (objectClass)
    isClosed '{documents.is.closed}' = DATA BOOLEAN (objectClass);
    isOpened '{documents.is.opened}' (objectClass o) = o IS objectClass AND NOT isClosed(o) MATERIALIZED;

    close '{documents.close}' (objectClass o)  { 
	NEWSESSION { isClosed(o) <- TRUE; apply(); }
} TOOLBAR CONFIRM;

    open '{documents.open}' (objectClass o)  { 
	NEWSESSION { isClosed(o) <- NULL; apply(); }
} TOOLBAR CONFIRM;
    
    skipClose = ABSTRACT CASE BOOLEAN (objectClass);
    closeDocuments(DATE date) + {  isClosed(objectClass o) <- TRUE WHERE date(o) < date AND date IS DATE AND NOT skipClose(o); APPLY; }
END

META defineDocumentAbstractHeaderClosed (objectClass)
    isClosed '{documents.is.closed}' = ABSTRACT BOOLEAN(objectClass) MATERIALIZED;
    isOpened '{documents.is.opened}' (objectClass o) = o IS objectClass AND NOT isClosed(o) MATERIALIZED;
    INDEX isOpened(objectClass o), o;
    close '{documents.close}' (o)  ABSTRACT LIST ( objectClass);
END

META defineDocumentInterfaceHeaderClosed (objectClass)
    @defineDocumentAbstractHeaderClosed(objectClass);
    @defineDocumentHeaderClosed(User##objectClass);
    isClosed(User##objectClass o) += isClosed(o);
    close(User##objectClass o) + {  isClosed(o) <- TRUE; }
END

META defineDocumentDetailClosed (object, detailClass)
    isClosed '{documents.is.closed}' (detailClass d) = isClosed(object(d));
    isOpened '{documents.is.opened}' (detailClass d) = isPosted(d) AND NOT isClosed(d);
END

