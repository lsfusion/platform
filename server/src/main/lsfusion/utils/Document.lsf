// In dex
META defineDocumentDetailIndex (object, detailClass)
    dataIndex '{document.data.index.detail.class}' = DATA INTEGER (detailClass) INDEXED; 
    defaultIndex '{document.default.index.detail.class}' (detailClass d) =
        PARTITION SUM 1
        ORDER d BY object(d) CHARWIDTH 4;
    index '{document.index.detail.class}' (detailClass d) = OVERRIDE dataIndex(d), defaultIndex(d) IN id;  
END

META defineDocumentDetailIndexPersistent (object, detailClass)
    dataIndex '{document.data.index.detail.class}' = DATA INTEGER (detailClass); 
    defaultIndex '{document.default.index.detail.class}' (detailClass d) =
        PARTITION SUM 1
        ORDER d BY object(d) CHARWIDTH 4;
    index '{document.index.detail.class}' (detailClass d) = OVERRIDE dataIndex(d), defaultIndex(d) IN id MATERIALIZED;  
END

META defineDocumentDetailSortOrder (object, detailClass)
    sortOrder '{document.sort.order}' (d) = ABSTRACT STRING[100] (detailClass);
    sortOrder##detailClass = GROUP SUM 1 IF sortOrder(detailClass d) BY object(d);
    
    updateSortOrder '{document.update.sort.order}'(detailClass detail)  { 
        IF sortOrder##detailClass(object(detail)) THEN {    
            LOCAL int = INTEGER();
            int() <- NULL;
            int() <-1;
            
            FOR object(detail) == object(detailClass d) ORDER sortOrder(d) DO {
                dataIndex(d) <- int();
                 int() <-  int()+1;
            }  
        } ELSE {
            MESSAGE '{document.message.update.sort.order.no.sort}';
        }
    } ASON CONTEXTMENU index[detailClass];  
    
END
META defineDocumentDetailSortOrder(object)
    @defineDocumentDetailSortOrder (object, ###object###detail);
END

