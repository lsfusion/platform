// Posted
GROUP posted '{document.posted}' : base;

META defineDocumentHeaderPosted(objectClass)
    isPosted '{document.posted}' (o) = DATA BOOLEAN (objectClass);
    isDraft '{document.draft}' (objectClass o) = o IS objectClass AND NOT isPosted(o) MATERIALIZED;

    postedTime '{document.posted.time}' = DATA DATETIME (objectClass) IN posted;
    postedTime(objectClass o) <- currentDateTime() WHEN SET(isPosted(o));
    
    postedUser = DATA CustomUser (objectClass);
    postedUser(objectClass o) <- currentUser() WHEN SET(isPosted(o));
    postedNameUser '{document.posted.name.user}' (objectClass o) = name[Contact](postedUser(o)) IN posted;

    postedComputer = DATA Computer (objectClass);
    postedComputer(objectClass o) <- currentComputer() WHEN SET(isPosted(o));
    postedHostnameComputer '{document.posted.hostname.computer}' (objectClass o) = hostname(postedComputer(o)) IN posted;

    prePost '{document.post}' (objectClass o)  { isPosted(o) <- TRUE; }
    post '{document.post}' (objectClass o)  { NEWSESSION { isPosted(o) <- TRUE; apply(); }
} TOOLBAR CONFIRM;

    unpost '{document.unpost}' (objectClass o)  
        { 
	NEWSESSION { isPosted(o) <- NULL; apply(); }
} TOOLBAR CONFIRM;
END

META defineDocumentAbstractHeaderPosted (objectClass)
    isPosted '{document.posted}' (o) = ABSTRACT BOOLEAN(objectClass) MATERIALIZED;
    isDraft '{document.draft}' (objectClass o) = o IS objectClass AND NOT isPosted(o) MATERIALIZED;
END
META defineDocumentInterfaceHeaderPosted (objectClass)
    @defineDocumentAbstractHeaderPosted(objectClass);
    @defineDocumentHeaderPosted(User##objectClass);
    isPosted(User##objectClass o) += isPosted(o);
END

META defineDocumentDetailPosted (object, detailClass)
    isPosted '{document.posted}' (detailClass d) = isPosted(object(d)) MATERIALIZED;
    isNotPosted '{document.draft}' (detailClass d) = d IS detailClass AND NOT isPosted(d);
END

