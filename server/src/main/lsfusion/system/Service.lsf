migratedMaterializations = DATA BOOLEAN ();

copyPermissions(ActionOrProperty target, ActionOrProperty source) {
    dataPermissionView(UserRole ur, target) <- dataPermissionView(ur, source);
    dataPermissionChange(UserRole ur, target) <- dataPermissionChange(ur, source);
    dataPermissionEditObjects(UserRole ur, target) <- dataPermissionEditObjects(ur, source);
    dataPermissionGroupChange(UserRole ur, target) <- dataPermissionGroupChange(ur, source);
}

onFinallyStarted() + {
    IF NOT migratedMaterializations() THEN {
        notRecalculateMaterializations(TableColumn tc) <- notRecalculate(tc);
        copyPermissions(propertyCanonicalName('Reflection.notRecalculateMaterializations[Reflection.TableColumn]'), propertyCanonicalName('Reflection.notRecalculate[Reflection.TableColumn]'));
        
        copyPermissions(actionCanonicalName('Reflection.recalculateMaterializations[Reflection.TableColumn]'), actionCanonicalName('Reflection.recalculateAggregation[Reflection.TableColumn]'));

        copyPermissions(actionCanonicalName('Reflection.recalculateMaterializationsWithDependencies[Reflection.TableColumn]'), actionCanonicalName('Reflection.recalculateAggregationWithDependencies[Reflection.TableColumn]'));

        copyPermissions(actionCanonicalName('Reflection.recalculateMaterializationsWithDependents[Reflection.TableColumn]'), actionCanonicalName('Reflection.recalculateAggregationWithDependents[Reflection.TableColumn]'));

        copyPermissions(actionCanonicalName('Reflection.checkMaterializations[Reflection.TableColumn]'), actionCanonicalName('Reflection.checkAggregation[Reflection.TableColumn]'));

        copyPermissions(actionCanonicalName('Reflection.checkMaterializations[STRING]'), actionCanonicalName('Reflection.checkAggregation[STRING]'));

        copyPermissions(actionCanonicalName('Reflection.recalculateColumnsMaterializations[Reflection.Table]'), actionCanonicalName('Reflection.recalculateColumnsAggregations[Reflection.Table]'));

        copyPermissions(propertyCanonicalName('Reflection.disableMaterializations[Reflection.TableColumn]'), propertyCanonicalName('Reflection.disableAggregations[Reflection.TableColumn]'));

        copyPermissions(propertyCanonicalName('Reflection.disableMaterializations[STRING]'), propertyCanonicalName('Reflection.disableAggregations[STRING]'));

        copyPermissions(actionCanonicalName('Service.checkMaterializationsAction[]'), actionCanonicalName('Service.checkAggregationsAction[]'));

        copyPermissions(actionCanonicalName('Service.checkMaterializationsMultiThreadAction[INTEGER,INTEGER]'), actionCanonicalName('Service.checkAggregationsMultiThreadAction[INTEGER,INTEGER]'));

        copyPermissions(actionCanonicalName('Service.checkMaterializationsMultiThreadAction[INTEGER]'), actionCanonicalName('Service.checkAggregationsMultiThreadAction[INTEGER]'));

        copyPermissions(actionCanonicalName('Service.checkMaterializationsMultiThreadAction[]'), actionCanonicalName('Service.checkAggregationsMultiThreadAction[]'));

        migratedMaterializations() <- TRUE;
    }
}

