restartServer '{service.restart.server}'  ABSTRACT LIST ( );
restartServer() + { 
    IF scheduledRestart() THEN restartServerAction();
    IF forbidLogin() THEN setPendingRestartAction();
    restartPushed() <- TRUE;
    apply();
}

