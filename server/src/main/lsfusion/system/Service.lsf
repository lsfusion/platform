pixelSize(Connection c) = screenWidth(c) * screenHeight(c);
heuristicSize() += CASE
    WHEN pixelSize(currentConnection()) <= INTEGER(valueSetting('maxPixelTinySize')) THEN Size.tiny
    WHEN pixelSize(currentConnection()) <= INTEGER(valueSetting('maxPixelMiniSize')) THEN Size.mini
    ELSE Size.normal;
